{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@restate/data-access/cloud-api-client": [
        "libs/data-access/cloud-api-client/src/index.ts"
      ],
      "@restate/data-access/cloud-api-fixtures": [
        "libs/data-access/cloud-api-fixtures/src/index.ts"
      ],
      "@restate/routes/cloud-accounts": [
        "libs/routes/cloud-accounts/src/index.ts"
      ],
      "@restate/routes/cloud-environment": [
        "libs/routes/cloud-environment/src/index.ts"
      ],
      "@restate/routes/cloud-environments": [
        "libs/routes/cloud-environments/src/index.ts"
      ],
      "@restate/ui/button": ["libs/ui/button/src/index.ts"],
      "@restate/ui/focus": ["libs/ui/focus/src/index.ts"],
      "@restate/ui/icons": ["libs/ui/icons/src/index.ts"],
      "@restate/ui/layout": ["libs/ui/layout/src/index.ts"],
      "@restate/ui/listbox": ["libs/ui/listbox/src/index.ts"],
      "@restate/ui/menu": ["libs/ui/menu/src/index.ts"],
      "@restate/util/auth": ["libs/util/auth/src/index.ts"],
      "@restate/util/mock-api": ["libs/util/mock-api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
