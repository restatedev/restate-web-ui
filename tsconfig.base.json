{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@restate/data-access/cloud-api": [
        "libs/data-access/cloud-api/src/index.ts"
      ],
      "@restate/ui/button": ["libs/ui/button/src/index.ts"],
      "@restate/util/mock-api": ["libs/util/mock-api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
